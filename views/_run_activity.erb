<activity>
  <id><%= run_activity[0] %></id>
  <status><%= run.state %></status>
  <starttime><%= run.starttime.iso8601 %></starttime>
  <endtime><%= run.finishtime.iso8601 unless run.finishtime.nil? %></endtime>
  <% running = (run.state == :running ? 1 : 0) %>
  <% finished = 1 - running %>
  <jobs count="1" ready="0" running="<%= running %>" done="<%= finished %>" failed="0"/>
</activity>
